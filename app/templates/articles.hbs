
<h1>Artikkelit</h1>

{{#link-to 'articles.new'}}Uusi{{/link-to}}

<ul class="article-list">
	{{#each model as |article index|}}

	<article>
		<h1>{{#link-to 'articles.article' article}}{{article.title}}{{/link-to}}
			<button {{action 'deleteArticle' article}}>[X]</button>
		</h1>
		<p>{{article.lead}}</p>
	</article>

	{{else}}
	<p>Ei artikkeleita :(</p>
	{{/each}}
</ul>


{{outlet}}
