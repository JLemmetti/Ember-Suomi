<form class="new-article" {{action 'saveArticle' model on='submit'}}>

	<input type="submit" value="Tallenna">

	<label>Otsikko</label>
	{{input value=model.title}}

	<label>Kirjoittaja</label>
	{{input value=model.author}}

	<label>Ingressi</label>
	{{textarea cols=100 rows=4 value=model.lead}}

	<label>Teksti</label>
	{{textarea cols=100 rows=40 value=model.body}}

	<input type="submit" value="Tallenna">

</form>

{{outlet}}
